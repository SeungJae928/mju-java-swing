import java.awt.Graphics;

public class MyButton {
	int type;
	Figure f;
    public MyButton(String s) {
		if(s.equals("사각형")) {
			this.type = 0;
		}
		else if(s.equals("타원")) {
			this.type = 1;
		}
		else if(s.equals("선분")) {
			this.type = 2;
		}
	}
	public void setBounds(int x, int y, int width, int height) {
		this.f = new Rect(x, y, width, height);
	}
	
}
